<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="menuItemTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/menuMargin</item>
        <item name="android:layout_marginRight">@dimen/menuMargin</item>
        <item name="android:layout_marginTop">@dimen/menuMargin</item>
        <item name="android:layout_height">@dimen/menuLayoutHeight</item>
        <item name="android:background">@color/colorMenu</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/menuTextSize</item>
        <item name="android:textColor">@color/colorMenuText</item>
    </style>

    <style name="listItemSongName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/listItemSongNameTextSize</item>
    </style>

    <style name="listItemSongArtist">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="listItemImage">
        <item name="android:layout_width">@dimen/listItemImageWidth</item>
        <item name="android:layout_height">@dimen/listItemImageHeight</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="listItemSubLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">@dimen/listItemSubLayoutMargin</item>
    </style>

    <style name="listItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/menuMargin</item>
    </style>

    <style name="listItemPlayControl">
        <item name="android:layout_width">@dimen/listItemPlayControls</item>
        <item name="android:layout_height">@dimen/listItemPlayControls</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:tint">@color/colorBlack</item>
    </style>

    <style name="listItemInfoControls">
        <item name="android:layout_width">@dimen/listItemPlayControls</item>
        <item name="android:layout_height">@dimen/listItemPlayControls</item>
        <item name="android:layout_toLeftOf">@id/btnPlay</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <style name="listItemSubRelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="infoSongSubDetails">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">@dimen/infoSongTextSize</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="infoSongImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_margin">@dimen/infoImageMargin</item>
    </style>

    <style name="nowPlayingSong">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/nowPlayingSongSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="nowPlayingArtist">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/nowPlayingSongArtistSize</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="nowPlayingControlsLayout">
        <item name="android:layout_margin">@dimen/menuMargin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="nowPlayingPlay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="nowPlayingImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/nowPlayingImageMarginTop</item>
    </style>


</resources>
